{
  "name": "story-management-app",
  "version": "1.0.0",
  "description": "A desktop application for managing story characters, items, and timeline visualization",
  "main": "dist/main.js",
  "scripts": {
    "build": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "start": "electron .",
    "dev": "webpack --mode development --watch",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-rebuild"
  },
  "keywords": [
    "electron",
    "story",
    "management",
    "timeline"
  ],
  "author": "Manus",
  "license": "MIT",
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "css-loader": "^7.1.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "html-webpack-plugin": "^5.6.4",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@types/react": "^19.1.11",
    "@types/react-dom": "^19.1.7",
    "better-sqlite3": "^12.2.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sqlite3": "^5.1.7",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.manus.story-management",
    "productName": "Story Management",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  }
}
